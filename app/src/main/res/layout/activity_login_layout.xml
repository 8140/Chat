<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/ic_welcome_bg"
    tools:context=".view.home.LoginActivity">


    <TextView
        app:bl_ripple_enable="true"
        app:bl_ripple_color="#50000000"
        android:layout_marginBottom="@dimen/px_60"
        app:bl_solid_color="#07c160"
        app:bl_corners_radius="@dimen/px_10"
        android:id="@+id/textView"
        android:layout_width="@dimen/px_370"
        android:layout_height="@dimen/px_145"
        android:layout_marginLeft="@dimen/px_63"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="登录"
        android:textSize="@dimen/px_48"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="#ffffff"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingPrefix" />

    <TextView
        app:bl_ripple_enable="true"
        app:bl_ripple_color="#40000000"
        android:textColor="#07c160"
        android:layout_marginBottom="@dimen/px_60"
        app:bl_solid_color="#ffffff"
        app:bl_corners_radius="@dimen/px_10"
        android:layout_width="@dimen/px_370"
        android:layout_height="@dimen/px_145"
        android:layout_marginRight="@dimen/px_63"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="注册"
        android:textSize="@dimen/px_48"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingPrefix" />

</android.support.constraint.ConstraintLayout>